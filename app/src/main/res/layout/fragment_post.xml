<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="70dp"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="fill">

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#87f6ff"
            android:id="@+id/type_bar">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/photo_view"
                android:src="@drawable/oval"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Johanna Snow"
                        android:textColor="#3c3744"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_ago"
                        android:text="30m ago"
                        android:textColor="#3c3744"
                        android:textSize="10sp"
                        android:gravity="right"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Where could I boulder? Where could I boulder? boulder boulder"
                    android:textColor="#3c3744"
                    android:textSize="18sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ee6352"
        android:gravity="end"
        android:text="6 answers"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="3dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"/>

</FrameLayout>
